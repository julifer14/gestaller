{% extends 'base.html.twig' %}

{% block title %}{{ "pressupost.edit"|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
		<h2>{{ "client.edit"|trans }}</h2>	 	
		<div class="pt-2">
			

			{{ form_start(form) }}
				{{ form_row(form.any) }}
				{{ form_row(form.data) }}
				{{ form_row(form.tasca) }}
				{{ form_row(form.iva) }}
				{{ form_row(form.estat) }}
				{{ form_row(form.vehicle) }}
				{{ form_row(form.treballador) }}
				{{ form_row(form.liniaPressuposts) }} <button data-id-pressupost="{{ form.vars.data.id }}" class="add_linia">Afegir linia</button>
				
				<div id="linias">
				</div>

				{{ form_rest(form) }}


             
				<div class="w-100 text-center">
					<button type="submit" class="btn btn-outline-primary"><i class="fa fa-paper-plane"></i> {{ "actions.send"|trans }}</button>
				</div>

			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}
