<div class="card border-dark m-2 p-1">
<div class="row">
    
    <div class="form-group col-sm">
        <label>Articles</label>
        <select class="form-control" name="new_linia[{{total_linia}}][article]"/>
            {% for a in articles %}
                <option value="{{ a.id }}">{{ a }}</option>
            {% endfor %}
        </select>   
    </div>   
    <div class="form-group col-sm">
        <label>Quantitat</label>
        <input class="form-control" name="new_linia[{{ total_linia }}][qtat]" type="text"/>  
    </div>


    <div class="form-group col-sm">
        <label>Preu</label>
        <input class="form-control" name="new_linia[{{ total_linia }}][preu]" type="text"/>  
    </div>
</div>
</div>