{% extends 'base.html.twig' %}

{% block title %}
  {{ 'empresa.info'|trans }}
{% endblock %}
{% block title_block %}
  {{ 'empresa.info'|trans }}
{% endblock %}

{% block body %}
  <div class="container mt-4">
    <div class="pt-2">
      {{ form_start(form) }}
      <div class="row mb-3">
        <div class="col col-sm-2">
          <img src="images/{{ logo }}"
            clas="img-thumbnail"
            width="100"
            heigth="100"
            alt="Logo empresa" 
            />
        </div>

        <div class="col col-sm-8">
          {{ form_widget(form.logo) }}
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{ form_row(form.nif) }}
        </div>
        <div class="col">
          {{ form_row(form.nom) }}
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{ form_row(form.direccio) }}
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{ form_row(form.codipostal) }}
          {{ form_row(form.ciutat) }}
        </div>
        <div class="col">
          {{ form_row(form.provincia) }}
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{ form_row(form.telefon) }}
        </div>
      </div>

      {{ form_rest(form) }}
      <div class="w-100 text-center">
        <button type="submit" class="btn btn-outline-primary">
          <i class="fa fa-paper-plane"></i>Guardar
        </button>
      </div>

      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
