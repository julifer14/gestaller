{% extends 'base.html.twig' %}

{% block title %}
  {{ 'tasca.add'|trans }}
{% endblock %}
{% block title_block %}
  {{ 'tasca.add'|trans }}
{% endblock %}
{% block body %}
  <div class="pt-2">
    {{ form_start(form) }}
		{{ form_row(form.nom) }}
		{{ form_row(form.descripcio) }}
		{{ form_row(form.temps) }}
		
		{{ form_rest(form) }}

		<div class="w-100 text-center">
			<button type="submit" class="btn btn-outline-primary">
				<i class="fa fa-paper-plane"></i> Enviar
			</button>
		</div>

    {{ form_end(form) }}
  </div>
{% endblock %}
