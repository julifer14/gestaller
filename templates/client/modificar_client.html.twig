{% extends 'base.html.twig' %}

{% block title %}{{ "client.edit"|trans }}{% endblock %}

{% block body %}
<div class="container mt-4">
		<h2>{{ "client.edit"|trans }}</h2>	 	
		<div class="pt-2">
			

			{{ form_start(form) }}
				{{ form_row(form.nom) }}
				{{ form_row(form.cognoms) }}
				{{ form_row(form.adreca) }}
				{{ form_row(form.telefon) }}
				{{ form_row(form.email) }}
                {{ form_row(form.DNI) }}
				{{ form_rest(form) }}


             
				<div class="w-100 text-center">
					<button type="submit" class="btn btn-outline-primary"><i class="fa fa-paper-plane"></i> {{ "actions.send"|trans }}</button>
				</div>

			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}
