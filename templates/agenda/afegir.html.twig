{% extends 'base.html.twig' %}

{% block title %}
  {{ 'agenda.add'|trans }}
{% endblock %}
{% block title_block %}
  {{ 'agenda.add'|trans }}
{% endblock %}
{% block body %}
  <div class="pt-2">
    {{ form_start(form) }}
		{{ form_row(form.tasca) }}
		{{ form_row(form.dataHora) }}
		{{ form_row(form.vehicle) }}
		{{ form_row(form.treballador) }}
		{{ form_row(form.estat) }}
		
		{{ form_rest(form) }}

		<div class="w-100 text-center">
			<button type="submit" class="btn btn-outline-primary">
				<i class="fa fa-paper-plane"></i> Enviar
			</button>
		</div>

    {{ form_end(form) }}
  </div>
{% endblock %}

