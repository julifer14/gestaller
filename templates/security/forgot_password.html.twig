{% extends 'base.html.twig' %}

{% block title %}{{"user.restaurar"|trans}}{% endblock %}
{% block title_block %}{{"user.restaurar"|trans}}{% endblock %}

{% block body %}

    <div class="container pb-3">
        <div class="row mt-3">
            <div class="col-md-10 m-auto">

                <div class="border p-3 pr-4 pl-4">
                    <div class="box-header">
                        <h2 class="page_titre text-bleu h3 box-title mt-3 pb-3">
                            <strong>{{"user.passOblidada"|trans}}</strong>
                        </h2>
                        <p>{{"user.enviarEmailPass"|trans}}</p>
                    </div>

                    <div class="box-body">
                        <form method="post">

                            <div class="form-group row">
                                <label for="inputEmail" class="col-md-4">Email *</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.email)}}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>

                            {{ form_row(form) }}
                            
                            <div class="mt-4 text-right">
                                <button class="btn btn-md btn-primary" type="submit">
                                   <i class="fas fa-sign-in-alt"></i> {{"user.botoResetPass"|trans}}
                                </button>
                            </div>
                        </form>
                    </div>                
                </div>
            </div>
        </div>
    </div>

{% endblock %}
