{% extends 'base.html.twig' %}

{% block title %}
  Login
{% endblock %}
{% block title_block %}
  {{ 'login.benvingut'|trans }}
{% endblock %}

{% block body %}
  <form method="post">
    {% if error %}
      <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
       {{'login.jaLogin'|trans}} {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
      </div>
    {% endif %}

    <h2 class="h3 mb-3 font-weight-normal">
      {{ 'login.inicisessio'|trans }}
    </h2>
    <label for="inputEmail">Email</label>
    <input type="email"
      value="{{ last_username }}"
      name="email"
      id="inputEmail"
      class="form-control"
      required
      autofocus />
    <label for="inputPassword">Password</label>
    <input type="password"
      name="password"
      id="inputPassword"
      class="form-control"
      required />

    <input type="hidden"
      name="_csrf_token"
      value="{{ csrf_token('authenticate') }}" />

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <a class="text-secondary" href="/forgot-password">{{ 'login.oblidada'|trans }}</a>

    <div class="w-100 text-center">
      <button type="submit" class="btn btn-outline-primary">
        <i class="fa fa-paper-plane"></i> {{ 'login.login'|trans }}
      </button>
    </div>
  </form>
{% endblock %}
