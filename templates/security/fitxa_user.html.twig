{% extends 'base.html.twig' %}

{% block title %}{{"user.fitxa"|trans}}{% endblock %}
{% block title_block %}{{"user.fitxa"|trans}}{% endblock %}


{% block body %}
<div class="container mt-4">
		<h1>{{ user.nom }} {{ user.cognom }}</h1>	 	
			
			<div class="card">
				<div class="card-header">
					<span>{{ "user.info.codi"|trans }} </span>{{ user.id }} 
				</div>
				<div class="card-body">
					<p class="card-text">
						<span>{{ user.nom }} {{ user.cognom }}</span>
					</p>
					
					
					
					<p class="card-text">
						<span>{{ "user.info.tel"|trans }}: </span><span>{{ user.telefon}}</span>
					</p>
					<p class="card-text">
						<span>{{ "user.info.mail"|trans }}: </span><span>{{ user.email}}</span>
					</p>
					<p class="card-text">
						<span>{{ "user.info.dni"|trans }}: </span><span>{{ user.dni}}</span>
					</p>
				</div>
				<div class="card-footer">
					<a href="/user/modificar/{{ user.id }}" class="btn btn-secondary">{{ "user.edit"|trans }}</a>
					<a href="/user/esborrar/{{ user.id }}" class="btn btn-danger">{{ "user.del"|trans }}</a>
				</div>
			</div>
			<div class="card">
				<div class="card-header">
					<span>{{ "user.rols.list"|trans }}</span>
				</div>
				<div class="card-body">
					{% for rol in user.roles %}
						<p>{{ rol }}</p>
					{% endfor %}
				</div>
				
			</div>
	</div>
{% endblock %}

