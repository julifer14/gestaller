{% extends 'base.html.twig' %}

{% block title %}Contrasenya oblidada{% endblock %}

{% block body %}

    <div class="container pb-3">
        <div class="row mt-3">
            <div class="col-md-10 m-auto">

                <div class="border p-3 pr-4 pl-4">
                    <div class="box-header">
                        <h2 class="page_titre text-bleu h3 box-title mt-3 pb-3">
                            <strong>{{"user.restaurar"|trans}}</strong>
                        </h2>
                    </div>

                    <div class="box-body">
                        <form method="post">

                            <div class="form-group row">
                                <label for="inputEmail" class="col-md-4">{{'user.novaPas'|trans}} *</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.plainPassword)}}
                                    {{ form_errors(form.plainPassword) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputEmail" class="col-md-4">{{'user.reNovaPas'|trans}} *</label>
                                <div class="col-md-8">
                                    {{ form_widget(form.plainPassword2)}}
                                </div>
                            </div>
                            
                            {{ form_row(form) }}
                            
                            <div class="mt-4 text-right">
                                <button class="btn btn-md btn-primary" type="submit">
                                   <i class="fas fa-sign-in-alt"></i> {{'user.modifPas'|trans}}
                                </button>
                            </div>
                        </form>
                    </div>                
                </div>
            </div>
        </div>
    </div>

{% endblock %}
